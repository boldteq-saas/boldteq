{% comment %}
  Homepage Newsletter Section
  - Displays an email subscription form with custom styling
  - Supports background image or color
  - Fully responsive for mobile, tablet, and desktop
{% endcomment %}

{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

{%- style -%}
.homepage-newsletter {
  position: relative;
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
  overflow: hidden;
}

.homepage-newsletter__background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
  opacity: {{ section.settings.background_image_opacity }};
}

.homepage-newsletter__content {
  position: relative;
  z-index: 1;
  max-width: {{ section.settings.content_width }}px;
  margin: 0 auto;
  padding: 0 1.5rem;
  text-align: center;
}

.homepage-newsletter__content-wrapper {
  background-color: {{ section.settings.content_background_color | color_modify: 'alpha', section.settings.content_background_opacity }};
  padding: 2.5rem;
  border-radius: {{ section.settings.content_border_radius }}px;
  box-shadow: {% if section.settings.enable_content_shadow %}0 8px 30px rgba(0, 0, 0, 0.12){% else %}none{% endif %};
}

.homepage-newsletter__icon {
  display: flex;
  justify-content: center;
  margin-bottom: 1.5rem;
}

.homepage-newsletter__icon svg {
  width: 3rem;
  height: 3rem;
  color: {{ section.settings.icon_color }};
}

.homepage-newsletter__title {
  margin-top: 0;
  margin-bottom: 1rem;
  color: {{ section.settings.title_color }};
  font-family: var(--font-heading-family);
  font-size: calc(var(--font-heading-scale) * 2rem);
  line-height: 1.2;
}

.homepage-newsletter__description {
  color: {{ section.settings.text_color }};
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 1.5rem;
  max-width: 36rem;
  margin-left: auto;
  margin-right: auto;
}

.homepage-newsletter__form {
  max-width: 30rem;
  margin: 0 auto;
}

.newsletter-form__field-wrapper {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 100%;
}

@media screen and (min-width: 750px) {
  .newsletter-form__field-wrapper {
    flex-direction: row;
  }
}

.newsletter-form__field-wrapper .field {
  flex-grow: 1;
}

.newsletter-form__field-wrapper .field__input {
  width: 100%;
  height: 3.2rem;
  padding: 0 1rem;
  font-size: 0.95rem;
  border: 1px solid {{ section.settings.input_border_color }};
  border-radius: 4px;
  background-color: {{ section.settings.input_background_color }};
  color: {{ section.settings.input_text_color }};
  box-shadow: none;
}

.newsletter-form__field-wrapper .field__input::placeholder {
  color: {{ section.settings.input_placeholder_color }};
}

.newsletter-form__field-wrapper .field__input:focus {
  border-color: {{ section.settings.input_focus_border_color }};
  outline: none;
  box-shadow: 0 0 0 1px {{ section.settings.input_focus_border_color }};
}

.newsletter-form__button {
  min-width: 120px;
  min-height: 3.2rem;
  padding: 0 1.5rem;
  font-size: 1rem;
  font-weight: 600;
  background-color: {{ section.settings.button_background_color }};
  color: {{ section.settings.button_text_color }};
  border: 1px solid {{ section.settings.button_background_color }};
  border-radius: 4px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s, color 0.3s, border-color 0.3s;
}

.newsletter-form__button:hover {
  background-color: {{ section.settings.button_background_hover_color }};
  color: {{ section.settings.button_text_hover_color }};
  border-color: {{ section.settings.button_background_hover_color }};
}

.newsletter-form__message {
  margin-top: 1rem;
  font-size: 0.9rem;
}

.newsletter-form__message--success {
  color: {{ section.settings.success_message_color }};
}

.newsletter-form__message--error {
  color: {{ section.settings.error_message_color }};
}

.homepage-newsletter__disclaimer {
  color: {{ section.settings.disclaimer_color }};
  font-size: 0.8rem;
  line-height: 1.4;
  margin-top: 1rem;
  max-width: 36rem;
  margin-left: auto;
  margin-right: auto;
}
{%- endstyle -%}

<div class="homepage-newsletter color-{{ section.settings.color_scheme }}" id="homepage-newsletter-{{ section.id }}">
  {% if section.settings.background_image != blank %}
    <img
      srcset="{%- if section.settings.background_image.width >= 165 -%}{{ section.settings.background_image | img_url: width: 165 }} 165w,{%- endif -%}
        {%- if section.settings.background_image.width >= 360 -%}{{ section.settings.background_image | img_url: width: 360 }} 360w,{%- endif -%}
        {%- if section.settings.background_image.width >= 535 -%}{{ section.settings.background_image | img_url: width: 535 }} 535w,{%- endif -%}
        {%- if section.settings.background_image.width >= 750 -%}{{ section.settings.background_image | img_url: width: 750 }} 750w,{%- endif -%}
        {%- if section.settings.background_image.width >= 1070 -%}{{ section.settings.background_image | img_url: width: 1070 }} 1070w,{%- endif -%}
        {%- if section.settings.background_image.width >= 1500 -%}{{ section.settings.background_image | img_url: width: 1500 }} 1500w,{%- endif -%}"
      src="{{ section.settings.background_image | img_url: width: 1500 }}"
      sizes="100vw"
      alt="{{ section.settings.background_image.alt | escape }}"
      loading="lazy"
      class="homepage-newsletter__background-image"
    >
  {% endif %}
  
  <div class="homepage-newsletter__content">
    <div class="homepage-newsletter__content-wrapper">
      {% if section.settings.show_icon %}
        <div class="homepage-newsletter__icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 6C22 4.9 21.1 4 20 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6ZM20 6L12 11L4 6H20ZM20 18H4V8L12 13L20 8V18Z" fill="currentColor"/>
          </svg>
        </div>
      {% endif %}
      
      {% if section.settings.title != blank %}
        <h2 class="homepage-newsletter__title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="homepage-newsletter__description rte">{{ section.settings.description }}</div>
      {% endif %}
      
      <div class="homepage-newsletter__form">
        {%- form 'customer', id: 'newsletter-form', class: 'newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="newsletter-email"
                type="email"
                name="contact[email]"
                class="field__input"
                value="{% if customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="newsletter-form-error"
                {% elsif form.posted_successfully? %}
                  aria-describedby="newsletter-form-success"
                {% endif %}
                placeholder="{{ section.settings.input_placeholder_text }}"
                required
              >
            </div>
            <button type="submit" class="newsletter-form__button" name="commit">
              {{ section.settings.button_text }}
            </button>
          </div>
          
          {%- if form.posted_successfully? -%}
            <div class="newsletter-form__message newsletter-form__message--success" id="newsletter-form-success" tabindex="-1" autofocus>
              {{ section.settings.success_message }}
            </div>
          {%- endif -%}
          
          {%- if form.errors -%}
            <div class="newsletter-form__message newsletter-form__message--error" id="newsletter-form-error" tabindex="-1" autofocus>
              {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}.
            </div>
          {%- endif -%}
        {%- endform -%}
      </div>
      
      {% if section.settings.disclaimer_text != blank %}
        <div class="homepage-newsletter__disclaimer rte">{{ section.settings.disclaimer_text }}</div>
      {% endif %}
    </div>
  </div>
</div>

